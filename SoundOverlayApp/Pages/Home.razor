        {
            var buf = await this.GenerateSilenceBuffer(seconds, this.WithBeep);
            var trackName = $"Silence - {seconds} Sekunden{(this.WithBeep ? $" - mit Halbzeit Beep" : "")}";
            this.tracks.Add(trackName);
            this.loadedBuffers[trackName] = buf;
        }
